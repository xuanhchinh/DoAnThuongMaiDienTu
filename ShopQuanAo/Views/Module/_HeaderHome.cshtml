 <!-- header-->
<header class="container-fluid border-bottom bg-white">
    <div class="container  ">
        <div class="row">
            <div class="col-md-6">
                <div class="text-dark ">
                    <ul class="d-block mt-2 " style="font-size:14px;">
                        <li class=" d-inline-block  pr-3"><i class="fas fa-phone-alt"></i> 0123456789</li>
                        <li class="d-inline-block "><i class="fas fa-envelope"></i> Nhom17@gmail.com</li>
                    </ul>
                </div>
            </div>

            <div class="col-md-6 ">
                <ul class=" float-right d-block  mt-2" style="font-size:14px;">
                    @if (ViewBag.name != "")
                    {
                        <li class=" show d-inline-block">
                            <a class="page-item pr-3 dropdown-toggle  " href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user "></i>
                                @ViewBag.name
                            </a>
                            <div class="dropdown-menu mt-3" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item border-bottom" href="~/tai-khoan/@ViewBag.id"><i class="far fa-user"></i> Quản lý tài khoản</a>
                                <a class="dropdown-item border-bottom" href="~/tai-khoan/@ViewBag.id"><i class="far fa-heart"></i> Sản phẩn yêu thích</a>
                                <a class="dropdown-item " href="/logout"><i class="fas fa-sign-out-alt"></i> Thoát</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="page-item pr-3 d-inline-block"><a href="" class="text-dark" data-toggle="modal" data-target="#myModal_login"><i class="fas fa-sign-in-alt"></i> Đăng Nhập </a></li>
                        <li class="page-item pr-3 d-inline-block"><a class="text-dark" href="" data-toggle="modal" data-target="#myModal_signup"><i class="fas fa-user-plus"></i> Đăng Kí</a></li>
                    }
                    @Html.Action("card_header", "cart")
                </ul>
                
            </div>
        </div>
    </div>
</header>
