                            <label for="psw"><b class="text-secondary">Nội Dung Liên Hệ</b></label>
                            <textarea type="text" placeholder="Nội Dung Liên Hệ" name="detail"></textarea>
                            <button type="submit" class="btn-button w-100 bg-danger">Gửi Liên Hệ</button>
